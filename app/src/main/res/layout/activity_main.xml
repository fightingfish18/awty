<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/messagePrompt"
        android:hint="Insert Message"
        android:layout_below="@+id/messageText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message To Send:"
        android:id="@+id/messageText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone Number"
        android:id="@+id/numberText"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/messagePrompt"
        android:layout_alignLeft="@+id/messageText"
        android:layout_alignStart="@+id/messageText" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/numberInput"
        android:layout_below="@+id/numberText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Frequency Sent (minutes)"
        android:id="@+id/frequencyText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/frequencyInput"
        android:layout_below="@+id/frequencyText"
        android:layout_alignLeft="@+id/numberInput"
        android:layout_alignStart="@+id/numberInput" />

    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="Start"
        android:id="@+id/submit"
        android:layout_below="@+id/frequencyInput"
        android:layout_marginTop="58dp"
        android:layout_alignRight="@+id/frequencyInput"
        android:layout_alignEnd="@+id/frequencyInput"
        android:layout_alignLeft="@+id/frequencyInput"
        android:layout_alignStart="@+id/frequencyInput" />

</RelativeLayout>
